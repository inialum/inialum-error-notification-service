		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250430.0",
		"@inialum/token-generator": "^0.3.0",
		"@vitest/coverage-v8": "^3.1.2",
		"discord-api-types": "^0.38.1",
		"typescript": "^5.8.3",
		"vitest": "^3.1.2",
		"vitest-environment-miniflare": "^2.14.4",
		"wrangler": "^4.13.2"
	}
