{
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "Bundler",
		"exactOptionalPropertyTypes": false,
		"types": ["vitest/globals"],
		"paths": {
			"@/*": ["./src/*"],
			"@Root/*": ["./*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
